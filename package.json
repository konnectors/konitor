{
  "name": "konitor",
  "version": "0.8.3",
  "description": "The command-line tool for monitoring konnectors",
  "main": "./dist",
  "bin": "./bin/konitor.js",
  "files": [
    "bin",
    "dist",
    "list.json"
  ],
  "author": "Simon Constans <simonc@linux.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "testMatch": [
      "**/?(*.)spec.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-cozy-app"
    ],
    "rules": {
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/konnectors/konitor.git"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src -d dist --copy-files --ignore '**/*.spec.js'",
    "precommit": "yarn lint",
    "lint": "eslint . --fix",
    "start": "babel-node src/index.js",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/rest": "15.8.1",
    "chalk": "2.4.1",
    "clear": "0.1.0",
    "clui": "0.3.6",
    "configstore": "3.1.2",
    "figlet": "1.2.0",
    "fs-extra": "6.0.1",
    "inquirer": "5.2.0",
    "js-yaml": "3.12.0",
    "json5": "^1.0.1",
    "lodash": "4.17.10",
    "mkdirp": "0.5.1",
    "request": "2.87.0",
    "request-promise": "4.2.2",
    "simple-git": "1.95.1",
    "tty-table": "2.6.3",
    "yargs": "11.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "eslint": "4.19.1",
    "eslint-config-cozy-app": "0.8.0",
    "husky": "0.14.3",
    "jest": "23.1.0"
  }
}
