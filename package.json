{
  "name": "konitor",
  "version": "0.10.3",
  "description": "The command-line tool for monitoring konnectors",
  "main": "./dist",
  "bin": "./bin/konitor.js",
  "files": [
    "bin",
    "dist",
    "list.json"
  ],
  "author": "Simon Constans <simonc@linux.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "testMatch": [
      "**/?(*.)spec.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "cozy-app"
    ],
    "rules": {
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/konnectors/konitor.git"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src -d dist --copy-files --ignore '**/*.spec.js'",
    "precommit": "yarn lint",
    "lint": "eslint . --fix",
    "start": "babel-node src/index.js",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/rest": "18.5.6",
    "chalk": "4.1.1",
    "clear": "0.1.0",
    "clui": "0.3.6",
    "configstore": "5.0.1",
    "figlet": "1.5.0",
    "fs-extra": "9.1.0",
    "git-url-parse": "11.4.4",
    "inquirer": "7.3.3",
    "js-yaml": "4.0.0",
    "json5": "2.2.0",
    "lodash": "4.17.21",
    "mkdirp": "1.0.4",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "simple-git": "2.37.0",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "eslint-config-cozy-app": "2.1.0",
    "husky": "4.3.8",
    "jest": "26.6.3"
  }
}
