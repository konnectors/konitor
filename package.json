{
  "name": "konitor",
  "version": "0.5.3",
  "description": "The command-line tool for monitoring konnectors",
  "main": "./dist",
  "bin": "./bin/konitor.js",
  "files": ["bin", "dist", "list.json"],
  "author": "Simon Constans <simonc@linux.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "6.10"
          }
        }
      ]
    ],
    "plugins": ["transform-object-rest-spread"]
  },
  "jest": {
    "testMatch": ["**/?(*.)spec.js"]
  },
  "eslintConfig": {
    "extends": ["eslint-config-cozy-app"]
  },
  "eslintIgnore": ["dist"],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/konnectors/konitor.git"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel src -d dist --copy-files --ignore '**/*.spec.js'",
    "precommit": "yarn lint",
    "format": "prettier --write '**/*.{js,json}'",
    "lint": "eslint .",
    "start": "babel-node src/index.js",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/rest": "15.2.5",
    "chalk": "2.3.2",
    "clear": "0.1.0",
    "clui": "0.3.6",
    "configstore": "3.1.1",
    "figlet": "1.2.0",
    "fs-extra": "5.0.0",
    "inquirer": "5.1.0",
    "lodash": "4.17.5",
    "mkdirp": "0.5.1",
    "simple-git": "1.92.0",
    "tty-table": "2.5.9",
    "yargs": "11.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "eslint": "4.19.0",
    "eslint-config-cozy-app": "0.5.0",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "prettier": "1.11.1"
  }
}
